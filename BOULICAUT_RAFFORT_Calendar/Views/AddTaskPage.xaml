<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:Class="BOULICAUT_RAFFORT_Calendar.Views.AddTaskPage"
             Title="Nouvelle tâche">

    <StackLayout Padding="20" Spacing="15">
        
        <!-- Titre de la tâche -->
        <Entry x:Name="TitreEntry" Placeholder="Titre de la tâche" />

        <!-- Picker des événements -->
        <Picker x:Name="EvenementPicker" Title="Choisir un événement" />

        <!-- Si création d’un nouvel événement -->
        <Entry x:Name="NouvelEvenementEntry" Placeholder="Nom du nouvel événement (optionnel)" />

        <!-- Bouton valider -->
        <Button Text="Ajouter la tâche" Clicked="OnAjouterClicked" />

    </StackLayout>
</ContentPage>