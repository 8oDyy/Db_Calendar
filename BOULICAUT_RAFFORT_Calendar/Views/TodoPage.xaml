<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BOULICAUT_RAFFORT_Calendar.Views.TodoPage"
             Title="To-Do List">

    <VerticalStackLayout Padding="10" Spacing="10">

        <!-- ðŸŒ€ Carrousel horizontal -->
        <CollectionView x:Name="Carousel"
                        ItemsSource="{Binding Events}"
                        ItemsLayout="HorizontalList"
                        HorizontalScrollBarVisibility="Never"
                        HeightRequest="400">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="20"
                           Padding="20"
                           Margin="100"
                           WidthRequest="300"
                           BackgroundColor="#E0E0E0"
                           HasShadow="True"
                           >
                        <VerticalStackLayout Spacing="10">

                            <!-- ðŸŽ¯ Titre de lâ€™Ã©vÃ©nement -->
                            <Label Text="{Binding nom}"
                                   FontSize="20"
                                   FontAttributes="Bold" />

                            <!-- âœ… Liste des tÃ¢ches -->
                            <CollectionView ItemsSource="{Binding tasks}"
                                            SelectionMode="None">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <HorizontalStackLayout Spacing="10">
                                            <CheckBox IsChecked="{Binding fait}"
                                                      CheckedChanged="CheckBox_CheckedChanged"
                                                      VerticalOptions="Center" />
                                            <Label Text="{Binding titre}" VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                            <!-- âž• Bouton pour ajouter une tÃ¢che -->
                            <Button Text="ï¼‹"
                                    FontSize="24"
                                    HorizontalOptions="End"
                                    WidthRequest="50"
                                    HeightRequest="50"
                                    CornerRadius="25"
                                    BackgroundColor="#BB86FC"
                                    TextColor="Black"
                                    Clicked="OnAddTaskClicked" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- ðŸ”˜ Bouton global pour ajouter un Ã©vÃ©nement -->
        <Button Text="Ajouter un Ã©vÃ©nement"
                HorizontalOptions="Center"
                Padding="10"
                Margin="0,20,0,0"
                BackgroundColor="#ddd"
                Clicked="OnAddEventClicked" />
    </VerticalStackLayout>

</ContentPage>

